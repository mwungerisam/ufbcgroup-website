# Environment variables for Unique Form Business Company Ltd (UFBC)
# ===================================================
# Copy this file to .env.local and update the values
# For production, set NODE_ENV=production and update all values accordingly

# ====================
# Required Settings
# ====================
NODE_ENV=development  # Set to 'production' in production
NEXT_PUBLIC_SITE_URL=http://localhost:3000  # Update with your production URL
NEXTAUTH_URL=http://localhost:3000  # Must match NEXT_PUBLIC_SITE_URL
NEXTAUTH_SECRET=generate_secure_random_string  # Use: openssl rand -base64 32

# ====================
# Site Configuration
# ====================
NEXT_PUBLIC_COMPANY_NAME="UNIQUE FORM BUSINESS COMPANY Ltd"
NEXT_PUBLIC_COMPANY_EMAIL=ufbcltd@gmail.com
NEXT_PUBLIC_COMPANY_PHONE="+250 783 654 015"
NEXT_PUBLIC_COMPANY_ADDRESS="Kigali, Rwanda"

# ====================
# Email Configuration
# ====================
# Development (Ethereal Email - https://ethereal.email/)
EMAIL_SERVICE=ethereal
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_ethereal_username
EMAIL_PASS=your_ethereal_password

# Production (Example: SendGrid)
# EMAIL_SERVICE=sendgrid
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_SECURE=true
# EMAIL_USER=apikey
# EMAIL_PASS=your_sendgrid_api_key

# Email addresses
EMAIL_FROM="UFBCLTD <ufbcltd@gmail.com>"
EMAIL_TO=ufbcltd@gmail.com
EMAIL_REPLY_TO=ufbcltd@gmail.com
ADMIN_EMAIL=ufbcltd@gmail.com

# ====================
# Analytics & Tracking
# ====================
# Google Analytics 4 (starts with 'G-')
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google Tag Manager (starts with 'GTM-')
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# ====================
# Security
# ====================
ADMIN_TOKEN=generate_secure_random_string  # For admin API access
API_RATE_LIMIT=100  # Requests per minute per IP

# reCAPTCHA v3
# Get keys from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI  # Test key
RECAPTCHA_SECRET_KEY=6LeIxAcTAAAAAGG-vFI1TnRWxMZNFuojJ4WifJWe  # Test secret

# ====================
# API Configuration
# ====================
NEXT_PUBLIC_API_URL=/api  # Relative URL for same-origin, full URL for external

# ====================
# Social Media Links
# ====================
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/uniqueformrw
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/uniqueformrw
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/uniqueformrw
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/uniqueformrw

# ====================
# Development Settings
# ====================
# Set these to enable additional debugging in development
DEBUG=*,-not_this
NEXT_TELEMETRY_DISABLED=1  # Disable Next.js telemetry

# Content Security Policy (Development)
NEXT_PUBLIC_CSP_HEADER="default-src 'self' 'unsafe-inline' 'unsafe-eval' data:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' *.googleapis.com; img-src 'self' data: https:; font-src 'self' data: https:; connect-src 'self' http://localhost:3000 ws://localhost:3000;"

# Copy to .env and edit
GMAIL_USER=ufbcltd@gmail.com
GMAIL_PASS=your_gmail_app_password_here
PORT=3000
